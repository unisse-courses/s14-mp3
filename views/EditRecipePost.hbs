        <script>
          $(document).ready(function(){
            
            if (localStorage.getItem('isGuest') == 0){
              $('#accProfile').addClass("disabled")
              $('#create').hide()
            }
            else{
              $('#accProfile').addClass("enabled")
              $('#create').show()
            }

            $('#logout').click(function(){
              sessionStorage.clear();
            })
          });
