            <!-- PLACE THE DIVS HERE INSIDE THE CONTENT -->
            <div>
                <div class="container">
                    <form action="RecipePost.html">
                        <div class="form-row">
                            <h2>Edit Recipe Post</h2>
                        </div>
                        <div class="form-row">
                            
                            <div class="col-md form-group">
                                <label for="profilePic">Choose A profile Pic</label>
                                <input type="file" class="form-control-file" accept="image/*" id="profilePic" onchange="readURL(this);">  
                            </div>
                            
                            <div class="col form-group">
                                <label for="bio">DESCRIPTION</label>
                                <textarea class="form-control" id="description" rows="8"></textarea>
                            </div>
                            
                            <div class="col form-group">
                                <label for="bio">INGREDIENTS</label>
                                <textarea class="form-control" id="ingredients" rows="8"></textarea>
                            </div>
                            
                            <div class="col form-group">
                                <label for="bio">INSTRUCTIONS</label>
                                <textarea class="form-control" id="instructions" rows="8"></textarea>
                            </div>
                            
                        </div>
                        <button class="btn btn-primary" onclick="return update()">Update</button>
                    </form>
                </div>
            </div>
        </div>
        
        <script>
            function update(){
                var desc = document.getElementById("bio").value
                var ingred = document.getElementById("ingredients").value
                var instruct = document.getElementById("instructions").value
                var noerror = true;
                
                if (desc == ""){
                    document.getElementById("validFirst").textContent ='Please provide a brief description of your recipe'
                    document.getElementById("validFirst").style.color = "red";
                    noerror = false;
                }
                else
                    document.getElementById("validFirst").style.color = "white";
                    
                if(ingred == ""){
                    document.getElementById("validLast").textContent ='Please list down the ingredients used'
                    document.getElementById("validLast").style.color = "red";
                    noerror = false; 
                }
                else
                    document.getElementById("validLast").style.color = "white";

                if(instruct == ""){
                    document.getElementById("validUser").textContent ='Please list the steps in creating the recipe'
                    document.getElementById("validUser").style.color = "red";
                    noerror = false;
                    
                if (noerror == "true")
                {
                    alert("Profile Updated!");    
                }

            }
                
            function preview(input) {
        
            if (input.files && input.files[0]) {
                var reader = new FileReader();

                reader.onload = function (e) {
                    $('#previewPic').attr('src', e.target.result);
                };

                reader.readAsDataURL(input.files[0]);
            }
        }
    }       
        </script>

