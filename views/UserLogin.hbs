<html>
    <head>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
        <link rel="stylesheet" href=styles.css>
  
        <title>Foodies | User Login</title>
        <script src="guest.js"></script>
        <style>
            body{
                background-color: white;
                margin-top: 100px;
                margin-bottom: 100px;
                margin-left: 400px;
                margin-right: 400px;
            }

            .parent {
                height: 100%;
                width: 100%;
                display: flex;
                justify-content: center;
                align-items: center;
                background-color: #eaeaea;
                border: 5px solid #ffc900;            
                border-radius: 10px;    
            }

            .container{
                width: 450px;
                height: 00px auto;
                margin: 20px auto;
                padding: 50px;
            }

            .form-control{
                width: 200px;
                margin: 0 auto;
            }

            .btn{
                width: 200px;
                margin: 0 auto;
                text-align: center;
                text-transform: lowercase;
            }
            
            #warning{
                color: #eaeaea;
            }
        </style>
        
    </head>

    <body class="text-center">
        
        
    <div class="parent">
        <div class="container">
            <form class="form-signin" action="Homepage.html"> 
                <h1 class="h3 mb-3 font-weight-normal">Please Log in</h1>
                <label for="inputUser" class="sr-only">Email address</label>
                <input type="text" id="inputUser" class="form-control" placeholder="Username" autofocus=""/>
                <label for="inputPassword" class="sr-only">Password</label>
                <input type="password" id="inputPassword" class="form-control" placeholder="Password" />
                <div class="checkbox mb-3">
                    <label>
                        <input type="checkbox" value="remember-me"/> Remember Me
                    </label>
                    
                </div>
                <label id="warning">blank</label>
                <button onclick="return login()"class="btn btn-lg btn-primary btn-block">Log in</button>
                
            </form>
        </div>
    </div>
        
        <!-- PLACE THIS CODE AT THE END OF BODY FOR BOOTSTRAP -->
        <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
        <script src="guest.js"></script>
        <script>
            //insert other code here thanks
            function login(){
                
                var user = document.getElementById("inputUser").value
                var pass = document.getElementById("inputPassword").value
                if (user == ""){
                    document.getElementById("warning").textContent ='Please input your username'
                    document.getElementById("warning").style.color = "red";
                    return false
                }
                    
                if(pass == ""){
                    document.getElementById("warning").textContent ='Please input your password'
                    document.getElementById("warning").style.color = "red";
                    return false;
                }
                
                localStorage.setItem('isGuest', 1);
            }
        </script>
    </body>
