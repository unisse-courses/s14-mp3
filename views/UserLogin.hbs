<!-- BODY CLASS = "TEXT-CENTER OUTSIDE"-->

        <div class="parent">
            <div class="container">
                <form class="form-signin"> 
                    <h1 class="h3 mb-3 font-weight-normal text-center">Please Log in</h1>
                    
                    <label for="inputUser" class="sr-only">Username</label>
                        <input type="text" id="inputUser" class="form-control inputboxes" placeholder="Username" autofocus="" value="{{username}}"/>
                    
                    <label for="inputPassword" class="sr-only">Password</label>
                        <input type="password" id="inputPassword" class="form-control inputboxes" placeholder="Password" value="{{password}}"/>
                    
                    <div class="checkbox">
                        <label>
                            <input id="remember_me" type="checkbox" {{#if isChecked}}checked{{/if}}/> Remember Me
                        </label>
                    </div>

                    <label id="warning1" class="warning1"></label>
                    <button id="loginButton" class="btn btn-lg btn-primary btn-block">Log in</button>
                    
                </form>
            </div>
        </div>