            <!-- PLACE THE DIVS HERE INSIDE THE CONTENT -->
            <div>
                <div class="container">
                    <form action="AccountProfile.html">
                        <div class="form-row">
                            <h2>Edit Profile </h2>
                        </div>
                        <div class="form-row">
                        <div class="col-md mb-3">
                            <label for="validationCustom01">First name</label>
                            <input type="text" class="form-control" id="firstName" placeholder="e.g. Cardo" >
                            <label id="validFirst" class="warning"></label>
                        </div>
                        </div>
                        <div class="form-row">
                        <div class="col-md mb-3">
                            <label for="lastName">Last name</label>
                            <input type="text" class="form-control" id="lastName" placeholder="e.g. Dalisay" >
                            <label id="validLast"class="warning">hi</label>
                        </div>
                        </div>
                        <div class="form-row">
                        <div class="col-md mb-3">
                            <label for="userName">Username</label>
                            <input type="text" class="form-control" id="userName" placeholder="e.g. The Next 15 Years" >
                            <label id="validUser"class="warning"></label>
                        </div>
                        </div>
                        <div class="form-row">
                            <div class="col-md mb-3">
                                <label for="password">Password</label>
                                <input type="password" class="form-control" id="password" placeholder="" >
                                <small id="assure" class="form-text text-muted">
                                    Never share your password with anyone!                                                                                                                                                                                                                                                                                                                           
                                </small>
                                <label id="validPass"class="warning"></label>
                            </div>
                            </div>
                        <div class="form-row">
                            <div class="col-md form-group">
                                <label for="profilePic">Choose A profile Pic</label>
                                <input type="file" class="form-control-file" accept="image/*" id="profilePic" onchange="readURL(this);">  
                            </div>
                        </div>
                        
                        <div class="form-row">
                            <div class="col form-group">
                                <label for="bio">Short Bio</label>
                                <textarea class="form-control" id="bio" rows="3"></textarea>
                                <small id="assure" class="form-text text-muted">
                                    Don't worry you can leave this blank :^)                                                                                                                                                                                                                                                                                                                            
                                </small>
                            </div>
                        </div>
                        
                        <button class="btn btn-primary" onclick="return update()">Update</button>
                        
                    </form>
                </div>
            </div>
        </div>
        
        <script>
            function update(){
                var first = document.getElementById("firstName").value
                var last = document.getElementById("lastName").value
                var user = document.getElementById("userName").value
                var pass = document.getElementById("password").value
                //var pic = document.getElementById("profilePic").value
                var bio = document.getElementById("bio").value
                var noerror = true;
                
                if (first == ""){
                    document.getElementById("validFirst").textContent ='Missing first name'
                    document.getElementById("validFirst").style.color = "red";
                    noerror = false;
                }
                else
                    document.getElementById("validFirst").style.color = "white";
                    
                if(last == ""){
                    document.getElementById("validLast").textContent ='Missing last name'
                    document.getElementById("validLast").style.color = "red";
                    noerror = false; 
                }
                else
                    document.getElementById("validLast").style.color = "white";

                if(user == ""){
                    document.getElementById("validUser").textContent ='Please input your password'
                    document.getElementById("validUser").style.color = "red";
                    noerror = false;
                    
                }
                else
                    document.getElementById("validUser").style.color = "white";

                if(pass == ""){
                    document.getElementById("validPass").textContent ='Please input your password'
                    document.getElementById("validPass").style.color = "red";
                    noerror = false;
                }
                else
                    document.getElementById("validPass").style.color = "white";
                
                if (noerror == "true")
                {
                    alert("Profile Updated!");    
                }

            }
        </script>
        
